{
  "manifest_version": 3,
  "name": "Sheets Switcher",
  "version": "0.3",
  "description": "Enables fast switching between Google Sheets Worksheets.",
  
  "permissions": [
    "tabs"   
  ],

  "content_scripts": [
    {
      "matches": ["https://docs.google.com/spreadsheets/*"],
      "js": [
        "src/sheet_tracker.js",
        "src/content.js"
      ],
      "css": [],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/ui/ui.html",
        "src/ui/ui.css",
        "src/ui/ui.js"
      ],
      "matches": [
        "*://*.google.com/*"
      ]
    }
  ]
}
