{
  "manifest_version": 3,
  "name": "Sheets Switcher",
  "version": "0.4",
  "description": "Enables fast switching between Google Sheets Worksheets.",
  "icons": {
    "16": "icons/ss_16.png",
    "32": "icons/ss_32.png",
    "48": "icons/ss_48.png",
    "128": "icons/ss_128.png"
  }, 
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/spreadsheets/*"],
      "js": [
        "src/sheet_tracker.js",
        "src/content.js"
      ],
      "css": [],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/ui/ui.html",
        "src/ui/ui.css",
        "src/ui/ui.js"
      ],
      "matches": [
        "*://*.google.com/*"
      ]
    }
  ]
}
